@page "/"
@using UpSchool.Domain.Dtos
@using UpSchool.Domain.Utilities;

<PageTitle>Index</PageTitle>

<div class="card mt-3">
    <div class="card-body text-center">
        <div class="card-title">
            <h2 class="text-info">UpStorage Password Generator</h2>
            <p>Create secure passwords with our Password Generator.</p>
        </div>
        <div class="mt-2">
            <label class="form-label">
                Password Length <span class="badge bg-primary">@GeneratePasswordDto.Length</span>
            </label>
            <input class="form-range"  type="range" @onchange="InputOnChange" min="6" max="40" step="1" />
            <p> @Password</p>
        </div>
    </div>
</div>

@code{
    public GeneratePasswordDto GeneratePasswordDto = new GeneratePasswordDto();
    public PasswordGenerator PasswordGenerator = new PasswordGenerator();
    public string Password { get; set; } = string.Empty;

    private void InputOnChange(ChangeEventArgs args)
    {
        GeneratePasswordDto.Length = Convert.ToInt32(args.Value);

        Password= PasswordGenerator.Generate(GeneratePasswordDto);
    }
}

<style>
    body {
        background:#393E46
    }
</style>
